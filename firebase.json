{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "redirects": [ {
      "source": "/**",
      "destination": "https://mco.dev/",
      "type": 301
    } ],
    "rewrites": [ 
      { "source": "/",       "destination": "/index.html" }, 
      { "source": "/blog",   "destination": "/index.html" }, 
      { "source": "/talks",  "destination": "/index.html" }, 
      { "source": "/music",  "destination": "/index.html" }, 
      { "source": "/books",  "destination": "/index.html" }, 
      { "source": "/tags/*", "destination": "/index.html" } 
    ]
  }
}
